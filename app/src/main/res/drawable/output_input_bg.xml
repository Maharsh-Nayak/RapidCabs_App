<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#3A3B3F" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Border/Stroke -->
    <stroke
        android:width="1dp"
        android:color="#555759" />

    <!-- Optional shadow (for API >= 21) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
