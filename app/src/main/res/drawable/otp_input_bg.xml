<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Background color -->
    <solid android:color="#33FFFFFF"/> <!-- semi-transparent white -->

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Padding inside the shape -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
